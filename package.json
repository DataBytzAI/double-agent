{
    "name": "double-agent",
    "version": "0.2.8",
    "private": true,
    "description": "Double agent is a detection system for when an http request or browser interaction is not who they say who they are",
    "scripts": {
        "build": "tsc --build",
        "watch": "tsc -w",
        "clean": "tsc --build --clean",
        "clean-logger": "tsc --build --clean ./shared/logger",
        "test": "NODE_ENV=test CACHE_DIR=.cache-test jest --runInBand"
    },
    "author": "Data Liberation Foundation",
    "license": "ISC",
    "engines": {
        "node": ">=10.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": ". ~/.nvm/nvm.sh && lint-staged",
            "pre-push": "npm run test"
        }
    },
    "dependencies": {
        "puppeteer": "~1.19.0",
        "@secret-agent/main": "^0.2.8"
    },
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "@types/node": "^12.7.11",
        "husky": "^1.3.1",
        "jest": "^24.9.0",
        "jest-environment-node": "^24.9.0",
        "jest-junit": "^6.3.0",
        "jest-summary-reporter": "^0.0.2",
        "lerna": "^3.4.3",
        "lint-staged": "^8.2.1",
        "nodemon": "^1.18.9",
        "npm-run-all": "^4.1.3",
        "pino-pretty": "^3.2.0",
        "prettier": "^1.19.1",
        "pretty-quick": "^1.8.0",
        "rimraf": "^3.0.0",
        "source-map-support": "^0.5.16",
        "tslint": "^5.20.1",
        "tslint-config-airbnb": "^5.11.2",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-plugin-prettier": "^2.0.1",
        "@types/puppeteer": "~1.19.1",
        "typescript": "^3.7.2"
    },
    "workspaces": [
        "detections/*",
        "../secret-agent/main",
        "../secret-agent/chrome",
        "../secret-agent/emulators",
        "../secret-agent/emulator/plugins/*",
        "../secret-agent/mitm",
        "../secret-agent/remote",
        "../secret-agent/shared/*"
    ],
    "lint-staged": {
        "linters": {
            "./**/*.ts": [
                "tslint --format verbose",
                "git add"
            ],
            "./**/*.json": [
                "prettier --write",
                "git add"
            ]
        },
        "ignore": [
            "publish/**",
            "**/types/*.js",
            "**/types/*.d.ts"
        ]
    }
}
